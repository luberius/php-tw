{
    "name": "luberius/php-tw",
    "description": "A PHP project template with Tailwind CSS integration",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Syaril A P",
            "email": "callmesyahril@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "symfony/console": "^5.4",
        "symfony/process": "^5.4",
        "luberius/tailwindcss": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Luberius\\PhpTw\\": "src/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "@php -r \"file_exists('.gitignore') || copy('stubs/default/.gitignore', '.gitignore');\"",
            "@php -r \"array_map(function($f) { if (file_exists($f)) { unlink($f); } }, glob('stubs/default/*'));\"",
            "@php -r \"array_map('unlink', glob('stubs/default/.*'));\"",
            "@php -r \"rmdir('stubs/default');\"",
            "@php -r \"rmdir('stubs');\"",
            "@php -r \"unlink('README.md');\"",
            "@php welcome.php",
            "@php -r \"unlink('welcome.php');\""
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
